{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "components/*": ["src/components/*"],
      "locales/*": ["src/locales/*"],
      "pages/*": ["src/pages/*"],
      "constants/*": ["src/constants/*"],
      "hooks/*": ["src/hooks/*"],
      "store/*": ["src/store/*"],
      "utils/*": ["src/utils/*"],
      "theme/*": ["src/theme/*"]
    },
    "strict": true,
    "forceConsistentCasingInFileNames": true
  }
}
